<html>
    <head> 
        <!--link rel="stylesheet" type= "text/css" href="{{url_for('static', filename='base_styles.css')}}"-->
        {% extends 'base.jinja2' %}

        {% block subtitle %}All the things{% endblock subtitle %}

        {% block content %}
    </head>
    <body>
        
        <div class="all_section">
            <ul>
                {% for task in tasks %}
                    <li>{{ task.name }}{% if task.performed %} Done on {{ task.performed }} by {{ task.performed_by.name }}{% else %} Undone {% endif %}</li>
                {% endfor %}
            </ul>
        </div>

    </body>
    {% endblock content %}
</html>